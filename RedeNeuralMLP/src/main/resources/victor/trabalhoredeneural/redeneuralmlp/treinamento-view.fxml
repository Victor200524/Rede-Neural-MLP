<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="victor.trabalhoredeneural.redeneuralmlp.TreinamentoController">
    <children>
        <ProgressIndicator fx:id="progressIndicator" />
        <Label fx:id="lblStatus" text="Treinando a Rede Neural...">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-border-color: lightgray; -fx-border-radius: 5; -fx-padding: 10;">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Época Atual:" />
                        <Label fx:id="lblEpocaAtual" text="0" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Erro Médio:" />
                        <Label fx:id="lblErroAtual" text="-" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="boxPlato" alignment="CENTER" spacing="10.0" style="-fx-background-color: #fff8e1; -fx-border-color: #ffc107; -fx-border-radius: 5; -fx-padding: 10;" visible="false">
            <children>
                <Label text="Treinamento estagnou (Platô)!" textFill="#d35400">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="O que deseja fazer?" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnParar" onAction="#onPararClick" text="Parar" />
                        <Button fx:id="btnContinuar" onAction="#onContinuarClick" text="Continuar" />
                        <Button fx:id="btnReduzir" onAction="#onReduzirClick" text="Continuar (Reduzir N-10%)" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>